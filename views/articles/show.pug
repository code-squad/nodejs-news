extends ../layouts/main

block show-articles
    // Page Content
    .container
        .row
            // Post Content Column
            .col-lg-8
                // Title
                h1.mt-4= article.title
                // Author
                p.lead
                    | by
                    a(href='#') Start Bootstrap
                hr
                // Date/Time
                p= article.date
                hr
                // Preview Image
                img.img-fluid.rounded(src='http://placehold.it/900x300', alt='')
                hr
                // Post Content
                p.lead !{article.body}

                hr
                // Comments Form
                .card.my-4
                    h5.card-header Leave a Comment:
                    .card-body
                        form
                            .form-group
                                textarea.form-control(rows='3')
                            button.btn.btn-primary(type='submit') Submit
